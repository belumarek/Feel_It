<div class="container">
  <h1 class="tipografia text-center">Choose your adventure</h1>
  <div class="row">
    <div class="col-lg-6">
      <% @experiences.each do |experience| %>
        <div class="card-product my-3">
          <% if experience.photo.attached? %>
            <%= cl_image_tag experience.photo.key, height: 300, width: 300, crop: :fill, class: "img-fluid" %>
          <% else %>
            <%= cl_image_tag "no disponible", height: 300, width: 300, crop: :fill, class: "img-fluid" %>
          <% end %>
          <div class="card-product-infos w-100">
            <h2><%= experience.name %></h2>
            <p><%= experience.description%></p>
            <p class= "my-1"><strong> $ <%= experience.price %></strong></p>
              <%# Booking %>
            <div class="row w-100">
              <div class= "d-flex justify-content-end w-100">
                <%= link_to "Book", new_experience_booking_path(experience.id), class: "btn btn-dark mx-1"%>
                  <%# VER MAS %>
                <%= link_to "More info", experience_path(experience.id) , class: "btn btn-outline-warning mx-1" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-12 col-lg-6">
      <div id="map"
                    style="width: 100%; height: 90vh; position: sticky"
                    data-markers="<%= @markers.to_json %>"
                    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
   </div>
</div>













