<div class="container">
<h2> Mejores experiencias del mes </h2>


  <div class="card-trip">
     <% @experiences.each do |experience| %>
        <div class="col-md-3 my-3">
          <div class="card-img-top">
          <% if experience.photo.attached? %>
            <%= cl_image_tag experience.photo.key, height: 300, width: 300, crop: :fill, class: "img-fluid" %>
          <% else %>
            <%= cl_image_tag "no disponible", height: 300, width: 300, crop: :fill, class: "img-fluid" %>
          <% end %>
    <div class="card-trip-infos">
      <div>
        <h5 class="card-title"><%= experience["name"] %></h5>
      </div>
      <h4 class="card-trip-pricing">$<%= experience["price"] %></h4>
      <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
      <% end %>
    </div>
  </div>
  </div>
  </div>
