<!-- DIV CLASS BANNER  -->
<div class="home-banner">
  <%= simple_form_for :search, url: root_path, method: :get do |f| %>
  <!-- DIV CLASS SEARCH FORM  -->
    <div class="search-form-control form-group" id="search">
      <input class="form-control string required" type="text" name="search[query]" id="search_query" placeholder="Dónde vivirás tu próxima experiencia?" />
      <button name="button" type="submit" class="btn btn-gradient">
        <i class="fas fa-search"></i>
      </button>
    </div>

    <div class="search-form-control form-group" id="search">
      <input class="form-control string required" type="text" name="search[query]" id="search_query" placeholder="Cuando?" />
      <button name="button" type="submit" class="btn btn-gradient">
        <i class="fas fa-search"></i>
      </button>
    </div>

  <% end %>

</div>



<div class="container">
  <h1 class="text-center mt-3 mb-4">Experiencias destacadas</h1>
  <div class="row">
      <% @experiences.each do |experience| %>
        <div class="col-md-4 my-3">
          <div class="card-img-top">
            <% if experience.photo.attached? %>
              <%= cl_image_tag experience.photo.key, height: 300, width: 300, crop: :fill, class: "img-fluid" %>
            <% else %>
              <%= cl_image_tag "no disponible", height: 300, width: 300, crop: :fill, class: "img-fluid" %>
            <% end %>
          </div>
            <h5 class="card-title"><%= experience.name %></h5>
            <p> $ <%= experience.price %></p>
            <div class="">
              <%# Booking %>
              <a class="btn btn-dark"href=#>Book</a>
              <%# VER MAS %>
              <button type="button" class="btn btn-outline-warning">Ver Mas</button>
          </div>
        </div>
      <% end %>
  </div>
</div>






