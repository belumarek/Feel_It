<!DOCTYPE html>
<html>
  <head>
    <title>FeelIt</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://fonts.googleapis.com/css?family=Lato:300,500" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Montserrat:700" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat&family=Roboto:ital,wght@0,300;0,500;0,900;1,900&display=swap" rel="stylesheet">

    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,700" rel="stylesheet">

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
  </head>

  <body>


    <div class="navbar d-flex justify-content-between bg-white py-3 px-4 sticky-top">


      <%= link_to root_path do %>
      <%= image_tag "feel.png", class: "logoFeel"  %>
      <% end %>

      <%= simple_form_for :search, url: root_path, method: :get do |f| %>
      <div class="search-form-control form-group" id="search">
      <input class="form-control string required" type="text" name="search[query]" id="search_query" placeholder="DÃ³nde?" />
      <button name="button" type="submit" class="btn btn-gradient">
        <i class="fas fa-search"></i>
      </button>
      </div>
      <% end %>
      <div class="align-items-center">
        <div class="dropdown  d-none d-sm-block">
          <%= image_tag "vector.jpg", class: "avatar", alt:"avatar", type: "image", id: "dropdownMenuButton", data: { toggle:"dropdown" }, aria: { haspopup:"true", expanded: "false" } %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
          <% if user_signed_in? %>
            <%= link_to "My profile", user_path(current_user), class: "dropdown-item" %>
            <%= link_to "Add an experience", new_experience_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, class: "dropdown-item", method: :delete  %>
          <% else %>
            <%= link_to "Log In", new_user_session_path , class: "dropdown-item" %>
            <%= link_to "Sign Up", new_user_registration_path , class: "dropdown-item" %>
          <% end %>
          </div>
        </div>
      </div>
    </div>
   <!-- END OF NAV BAR -->

    <%= yield %>

<div class="footer">
  <div class="footer-links">
    <a href="#"><i class="fab fa-github"></i></a>
    <a href="#"><i class="fab fa-instagram"></i></a>
    <a href="#"><i class="fab fa-facebook"></i></a>
    <a href="#"><i class="fab fa-twitter"></i></a>
    <a href="#"><i class="fab fa-linkedin"></i></a>
  </div>
  <div class="footer-copyright">
    Feel It is made with <i class="fas fa-heart"></i>, Piggy team.
  </div>
</div>
  </body>
</html>
