

<div class="container">
  <div class="show-banner my-3 rounded" style= "background-image: url(<%= cl_image_path @experience.photo.key %>);" >
  <h2 class="experience-title"><%= @experience.name %></h2>
  </div>
  <div class="row mx-0">
    <div class="row  col-6 ">

      <div class="col-12  border  p-5  bg-white mr-2">
        <div class="card-show">
          <h4 class="card-title"><%= @experience.name %></h4>
          <p id="experience-size">Experiencia ofrecida por <%= @user.username %></p>
          <hr>
          <br>
          <p class="categoria-description"><%= @experience.description %></p>
          <br>
          <hr>
          <div class="categoria-availability">
            <p>Disponibilidad <%= @experience.availability %></p>
          </div>
          <div class="categoria-experiencia">
            <p>Category <%= @experience.category %></p>
          </div>
          <hr>
          <div class="categoria-place">
            <p>Lugar <%= @experience.place%></p>
          </div>
          <hr>
          <div class="categoria-price">
            <h4 class="card-title">$<%= @experience.price%></h4>
          </div>
        </div>
      </div>

      <div class="col-12  border p-5 my-3 bg-white mr-2">
        <div class="#">
          <div class="">
            <h5 id="book-font">Book this experience</h5>
            <hr>
            <p> Precio: $<%= @experience.price %> </p>
            <div class="form-group text-center">
              <%= render "form2" %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="row col-6 ml-4 mx-0">
       <div id="map"
          style="width: 110%; height: 100vh; position: sticky;"
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
    </div>
  </div>
  <div class="row my-3">
    <div class="col-12 border p-3 bg-white ">
      <h3 class="mt-5 mb-3 border-bottom border-warning card-title">Reviews</h3>
        <ul class="list-group review-form">
          <% @experience.reviews.each do |review| %>
            <li class="list-group-item"><%="⭐"*review.rating %> <%= review.content %></li>
          <% end %>
        </ul>
    </div>
  </div>
</div>









